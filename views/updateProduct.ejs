<head>
    <link rel="stylesheet" href="/styles/addProduct.css">
    <link rel="stylesheet" href="/styles/navbar.css">
    <link rel="stylesheet" href="styles/home.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" 
    integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" 
    crossorigin="anonymous" 
    referrerpolicy="no-referrer" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        #submit{
            height: 30px;
            margin-top: 300px;
        }
    </style>
</head>
<body>
    <%-include("./includes/navbar")%>
    <div class="container form-container mt-5">
        <form novalidate class="row g-3" method="POST" action="/products/<%=targetProduct._id%>/update/success">
            <div class="col-md-6">
                <label for="inputTitle" class="form-label">Name of product</label>
                <input type="text" required class="form-control needs-validation" id="inputTitle" name="name" placeholder="Name of your Listing" value="<%=targetProduct.name%>">
            </div>
            <div class="col-12">
                <label for="inputDescription" class="form-label">Description</label>
                <textarea class="form-control" id="inputDescription" name="description" placeholder="Describe your product" rows="5" cols="10"><%=targetProduct.description%></textarea>
            </div>
            <div class="col-md-6 mt-4">
                <label for="inputBrand" class="form-label">Brand</label>
                <select id="inputBrand" class="form-select dropend" name="brand">
                    <option selected><%=targetProduct.brand.name%></option>
                    <%-include("./includes/brands.ejs")%>
                </select>
            </div>
            <div class="col-md-4 mt-4">
                <label for="inputCountry" class="form-label">Category</label>
                <select id="inputCountry" class="form-select dropend" name="category">
                <option selected><%=targetProduct.category.name%></option>
                <%-include("./includes/cats.ejs")%>
                </select>
            </div>
            <div class="col-md-2">
                <label for="inputPrice" class="form-label">Price</label>
                <input type="number" class="form-control" id="inputPrice" name="price" placeholder="in rupees" value="<%=targetProduct.price%>">
            </div>
            <div class="col-12">
                <div class="form-check">
                    <label for="inputDescription" class="form-label">Specifications</label>
                    <textarea class="form-control" id="inputDescription" name="specifications" placeholder="Describe your Place" rows="5" cols="10"><%=targetProduct.specifications%></textarea>
                    <br>
                </div>
            </div>
        <br>
        <div class="row">
            <div class="col-md-6">
                <label for="mainimage" class="form-label">Main Image</label>
                <input type="file" class="form-control" id="mainimage" name="mainimage">
            </div>
            <div class="col-md-6">
                <label for="images" class="form-label">Additional Images</label>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-md-6">
                <div class="left-div" style="text-align: center; height: 20vh;">
                    
                </div>
            </div>
            <div class="col-md-6">
                <div class="additional-info" style="height: 25vh; display: flex; justify-content: center;">
                    <div style="flex: 1;">
                        <input type="file" name="img1">
                    </div>
                    <div style="flex: 1;">
                        <input type="file" name="img2">
                    </div>
                    <div style="flex: 1;">
                        <input type="file" name="img3">
                    </div>
                </div>
            </div>
        </div>
        <br>
        <br>
        <button type="submit" id="submit">Submithh!</button>
        </form>
        <br>
        <form action="/">
            <button>Back</button>
        </form>
        <br>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
